# Window Manager
"wmctrl -r :ACTIVE: -b toggle,maximized_vert,maximized_horz"
   Mod2+Mod4 + Up

"wmctrl -r :ACTIVE: -b remove,maximized_horz ; wmctrl -r :ACTIVE: -e 0,0,0,800,900"
   Mod2+Mod4 + Left

"wmctrl -r :ACTIVE: -b remove,maximized_horz ; wmctrl -r :ACTIVE: -e 0,800,0,800,900"
   Mod2+Mod4 + Right

"wmctrl -r :ACTIVE: -b toggle,fullscreen"
   Mod2+Mod4 + F11

"wmctrl -r :ACTIVE: -b toggle,above"
   Mod2+Mod4 + a

"wmctrl -c :ACTIVE:"
   Mod2+Mod4 + Escape

# Window Shorcuts
"wmctrl -a GVIM || gvim"
   Mod2+Mod4 + e

"wmctrl -a 'Mozilla Firefox' || firefox -P firefox-4"
   Mod2+Mod4 + f

"wmctrl -a '- Google Chrome' || google-chrome"
   Mod2+Mod4 + z

"wmctrl -a 'urxvt' || wmctrl -a 'amigrave@agr' || wmctrl -a '- VIM' || /home/amigrave/bin/urxvt"
   Mod2+Mod4 + t

