#!/usr/bin/env python
# -*- coding: utf-8 -*-
import sys

from baker import command, run

SILENT = False
if '--silent' in sys.argv:
    SILENT = True
    sys.argv.remove('--silent')

try:
    from libqtile.command import Client
except ImportError:
    if SILENT:
        sys.exit(0)
    raise

c = Client()

@command
def switch_group(name):
    """Switch to a named group"""
    c.group[name].toscreen()

if __name__ == '__main__':
    run()
