#!/usr/bin/env python3
import sys

from cefpython3 import cefpython as cef


if len(sys.argv) != 2:
    print('usage: www <url>')
    sys.exit(1)

url = sys.argv[1]

sys.excepthook = cef.ExceptHook  # To shutdown all CEF processes on error
cef.Initialize()
cef.CreateBrowserSync(url=url, window_title=url)
cef.MessageLoop()
cef.Shutdown()
