#!/bin/bash
num=`ps aux | grep "/usr/bin/urxvt" | grep -v grep | wc -l`
num=`expr $num + 1`
#cmd="/usr/bin/urxvtc -icon /home/amigrave/.agr/icons/terminal${num}.png"
cmd="/usr/bin/urxvt -icon /home/amigrave/.agr/icons/terminal${num}.png"

$cmd "$@"
if [ $? -eq 2 ]; then
    #urxvtd -q -o -f
    urxvt -q -o -f
    $cmd "$@"
fi
