#!/bin/bash
if [ -e "/usr/bin/urxvt" ]; then
    urxvt="/usr/bin/urxvt"
elif [ -e "/usr/local/bin/urxvt" ]; then
    urxvt="/usr/local/bin/urxvt"
else
    zenity --text="Can't find urxvt" --error
    exit 1
fi

num=`ps aux | grep "$urxvt" | grep -v grep | wc -l`

num=`expr $num + 1`
#cmd="/usr/bin/urxvtc -icon $HOME/.agr/icons/terminal${num}.png"
cmd="$urxvt -icon $HOME/.agr/icons/terminal${num}.png"

$cmd "$@"
if [ $? -eq 2 ]; then
    #urxvtd -q -o -f
    $cmd "$@"
fi
