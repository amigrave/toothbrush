#!/bin/bash

sudo rsync -avn --progress --delete --exclude /dev --exclude /sys --exclude /proc  --exclude /media / /media/AGRMOBILE/ | tee /tmp/backup.log

echo    "---------------------"
read -p "Confirm rsync ? (y/n)"
if [ "$REPLY" != "y" ]; then
    exit
fi

sudo rsync -av --progress --delete --exclude /dev --exclude /sys --exclude /proc  --exclude /media / /media/AGRMOBILE/
