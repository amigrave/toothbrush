#!/bin/bash
if [ "$OSTYPE" == "linux" ]; then
    GVIM="/usr/bin/gvim"
    if [ "$1" = "" -o "$1" = "-" ]; then
        $GVIM "$1"
    else
        $GVIM --remote-tab-silent "$*"
        wmctrl -a GVIM
    fi
elif [ "$OSTYPE" == "darwin11" ]; then
    $HOME/bin/macvim --remote-tab-silent "$*"
elif [ "$OSTYPE" == "cygwin" ]; then
    HOME=/cygdrive/c/DOCUME~1/amigrave/ /cygdrive/c/PROGRA~1/Vim/vim73/gvim.exe --remote-tab-silent "$*" &
fi
