#!/bin/bash

if [ -x "$(command -v jupyter)" ]; then
    jupyter qtconsole  --style monokai --ConsoleWidget.font_family='Menlo' --ConsoleWidget.font_size=12 &
else
    ipython qtconsole --ConsoleWidget.font_family='Menlo' --ConsoleWidget.font_size=12 --colors=linux --pprint
fi

if [ $? -eq 0 ]; then
    disown
fi
